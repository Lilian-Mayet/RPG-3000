<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.UpgradeMenuController">
   <children>
      <ImageView fx:id="imageHero" fitHeight="185.0" fitWidth="171.0" layoutX="213.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../image/nothing.png" />
         </image>
      </ImageView>
      <TableView fx:id="tableHero" layoutX="4.0" layoutY="164.0" prefHeight="71.0" prefWidth="594.0">
        <columns>
            <TableColumn fx:id="classTypeHero" prefWidth="75.0" text="Class" />
            <TableColumn fx:id="nameHero" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="healthpointHero" prefWidth="75.0" text="HP" />
            <TableColumn fx:id="strenghtHero" prefWidth="75.0" text="Strenght" />
            <TableColumn fx:id="defenseHero" prefWidth="75.0" text="Defense" />
            <TableColumn fx:id="manaHero" prefWidth="75.0" text="Mana" />
            <TableColumn fx:id="arrowHero" prefWidth="75.0" text="Arrow" />
        </columns>
      </TableView>
      <Button fx:id="buttonHealth" layoutX="135.0" layoutY="263.0" mnemonicParsing="false" text="+200 HP" onAction="#addHealth" />
      <Label  layoutX="198.0" layoutY="235.0" text="Choose the perk you want :" />
      <Button fx:id="buttonStrenght" layoutX="232.0" layoutY="263.0" mnemonicParsing="false" text="Strenght +40%" onAction="#addStrenght" />
      <Button fx:id="buttonDefense" layoutX="369.0" layoutY="263.0" mnemonicParsing="false" text="+10 defense" onAction="#addDefense"/>
      <Button fx:id="buttonMana" layoutX="175.0" layoutY="306.0" mnemonicParsing="false" text="+100 mana" onAction="#addMana" />
      <Button fx:id="buttonArrow" layoutX="321.0" layoutY="306.0" mnemonicParsing="false" text="+10 arrow" onAction="#addArrow" />
   </children>
</AnchorPane>
